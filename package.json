{
  "name": "klear",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@klear/web",
    "dev:mobile": "npm run start --workspace=@klear/mobile",
    "build:web": "npm run build --workspace=@klear/web",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  }
}
